{
  "variables": {
    "vpc": "{{env `BUILD_VPC_ID`}}",
    "subnet": "{{env `BUILD_SUBNET_ID`}}",
    "aws_region": "{{env `AWS_REGION`}}"
  },
  "builders": [{
    "ami_name": "HARDEN-AMAZON-{{isotime \"02-Jan-06\"}}",
    "name": "Harden Amazon-",
    "type": "amazon-ebs",
    "region": "{{user `aws_region`}}",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "*amzn2-ami*-ebs",
        "root-device-type": "ebs"
      },
      "owners": ["137112412989", "591542846629", "801119661308",
        "102837901569", "013907871322", "206029621532",
        "286198878708", "443319210888"],
      "most_recent": true
    },
    "instance_type": "t2.micro",
    "force_deregister": "true",
    "force_delete_snapshot": "true",
    "encrypt_boot": true,
    "ssh_username": "ec2-user",
    "tags": {
      "Name": "{{user `ami_name`}}"
    },
    "run_tags": {
      "Name": "{{user `ami_name`}}"
    },
    "run_volume_tags": {
      "Name": "{{user `ami_name`}}"
    },
    "snapshot_tags": {
      "Name": "{{user `ami_name`}}"
    },
    "ami_description": "Harden Amazon Linux 2",
    "associate_public_ip_address": "true"
  },{
    "ami_name": "HARDEN-DEBIAN-{{isotime \"02-Jan-06\"}}",
    "ami_description": "Harden Debian 1.8 Strech",
    "associate_public_ip_address": "true",
    "instance_type": "t2.micro",
    "name": "Harden Debian-",
    "region": "{{user `aws_region`}}",
    "force_deregister": "true",
    "force_delete_snapshot": "true",
    "type": "amazon-ebs",
    "ssh_username": "admin",
    "encrypt_boot": true,
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "architecture": "x86_64",
        "name": "*k8s-1.8-debian-stretch-*",
        "block-device-mapping.volume-type": "gp2",
        "root-device-type": "ebs"
      },
      "owners": ["383156758163"],
      "most_recent": true
    },
    "tags": {
      "Name": "{{user `ami_name`}}"
    },
    "run_tags": {
      "Name": "{{user `ami_name`}}"
    },
    "run_volume_tags": {
      "Name": "{{user `ami_name`}}"
    },
    "snapshot_tags": {
      "Name": "{{user `ami_name`}}"
    }
  }],
  "provisioners": [
      {
      "type": "shell",
      "script": "config.sh"
      },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/playbook.yaml",
      "role_paths": [
        "ansible/roles/common",
        "ansible/roles/cloudwatchlogs",
        "ansible/roles/lynis",
        "ansible/roles/ossec",
        "ansible/roles/cis",
        "ansible/roles/alerts"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "rm .ssh/authorized_keys ; sudo rm /root/.ssh/authorized_keys"
      ]
    }
  ]
}
